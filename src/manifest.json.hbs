{
  "manifest_version": 2,
  "name": "{{htmlWebpackPlugin.options.title}}",
  "version": "{{htmlWebpackPlugin.options.version}}",
  "description": "Manage Steam gameserver login tokens",
  "browser_action": {},
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },
  "permissions": [ "https://steamcommunity.com/dev/*" ],
  {{#if htmlWebpackPlugin.options.prodMode}}
  "content_security_policy": "default-src; script-src 'self'; connect-src https://steamcommunity.com; style-src 'sha256-TYbwAL1uG5EtDAXm/G5TBQKUeiNI1JIfLMh/yMtxDNM=' https://fonts.googleapis.com https://maxcdn.bootstrapcdn.com; font-src data: https://fonts.gstatic.com https://maxcdn.bootstrapcdn.com;"
  {{else}}
  "content_security_policy": "default-src 'self'; script-src 'self' http://localhost:8080 'unsafe-eval'; connect-src http://localhost:8080 ws://localhost:8080 https://steamcommunity.com; style-src * 'unsafe-inline' 'self' blob:; img-src 'self' data:; font-src 'self' data: https://fonts.gstatic.com https://maxcdn.bootstrapcdn.com;"
  {{/if}}
}
