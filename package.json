{
  "name": "stean-gslt-manager",
  "version": "1.0.0",
  "description": "Browser extension to enhance Steam GSLT manager",
  "private": true,
  "scripts": {
    "dev": "webpack-dev-server --host localhost --disableHostCheck=true --mode=development",
    "dist": "npm-run-all build:* lint test:coverage build",
    "build": "webpack --mode=production",
    "build-firefox": "webpack --mode=production --env.target=firefox",
    "build-chrome": "webpack --mode=production --env.target=chrome",
    "build:check-integrity": "yarn check --integrity",
    "build:list": "npm list --depth=0",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "test:snapshot": "jest -u",
    "lint": "tslint --project . --format verbose",
    "release": "release-it"
  },
  "devDependencies": {
    "@types/enzyme": "3.1.9",
    "@types/jest": "22.0.1",
    "@types/react": "15.0.39",
    "@types/react-dom": "^15.5.4",
    "awesome-typescript-loader": "^3.2.1",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "6.24.1",
    "css-loader": "^0.28.7",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-15": "1.0.5",
    "enzyme-to-json": "3.3.0",
    "file-loader": "^3.0.0",
    "handlebars": "^4.0.0",
    "handlebars-loader": "^1.6.0",
    "handlebars-webpack-plugin": "^1.3.0",
    "html-webpack-plugin": "^3.0.0",
    "html-webpack-template": "^6.0.0",
    "jest": "22.1.3",
    "jest-fetch-mock": "1.4.1",
    "less": "^2.7.2",
    "less-loader": "4.0.6",
    "mini-css-extract-plugin": "^0.5.0",
    "npm-run-all": "4.1.2",
    "react-test-renderer": "15.6.1",
    "release-it": "^9.0.0",
    "style-loader": "^0.18.2",
    "ts-jest": "22.0.1",
    "tslint": "5.9.1",
    "tslint-react": "3.4.0",
    "typescript": "^2.4.2",
    "uglifyjs-webpack-plugin": "^2.0.0",
    "url-loader": "^0.5.9",
    "webpack": "^4.0.0",
    "webpack-cli": "^3.0.0",
    "webpack-dev-server": "^3.0.0",
    "write-file-webpack-plugin": "^4.2.0",
    "zip-webpack-plugin": "^3.0.0"
  },
  "dependencies": {
    "bootstrap": "^3.0.0",
    "copy-to-clipboard": "3.0.8",
    "mobx": "^3.3.0",
    "mobx-react": "^4.3.2",
    "mobx-react-devtools": "^4.2.15",
    "react": "^15.6.1",
    "react-bootstrap": "^0.31.3",
    "react-bs-notifier": "4.4.6",
    "react-dom": "^15.6.1",
    "react-intl": "^2.4.0",
    "uuid": "3.2.1"
  },
  "jest": {
    "mapCoverage": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "setupTestFrameworkScriptFile": "./src/setupTests.ts",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "coveragePathIgnorePatterns": [
      "./node_modules/",
      "./src/setupTests.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js}"
    ]
  }
}
